<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="HardcodedText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f4f1f1">

        <TextView
            android:id="@+id/cancel_maintain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:text="取消" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_weight="2"
            android:text="编辑维护信息"
            android:textColor="@color/black"
            android:gravity="center" />
        <TextView
            android:id="@+id/confirm_maintain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="确定" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#a5d1a5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:baselineAligned="false">
        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:rv_strokeColor="#cccccc"
            app:rv_strokeWidth="@dimen/division_line"
            app:rv_cornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.0">
            <com.xia.adgis.Utils.ClearEditText
                android:id="@+id/company_maintain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入广告牌维护公司"
                android:background="#00000000"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:gravity="center"
                android:textIsSelectable="true"
                android:maxLines="1"
                android:textColor="#ff666666"
                android:textColorHint="#88b5b5b5"/>
        </com.flyco.roundview.RoundLinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#a5d1a5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false">
        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            app:rv_strokeColor="#cccccc"
            app:rv_strokeWidth="@dimen/division_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:rv_cornerRadius="5dp">
            <com.xia.adgis.Utils.ClearEditText
                android:id="@+id/content_maintain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入广告牌维护内容"
                android:background="#00000000"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:gravity="center"
                android:textIsSelectable="true"
                android:maxLines="1"
                android:textColor="#ff666666"
                android:textColorHint="#88b5b5b5"/>
        </com.flyco.roundview.RoundLinearLayout>
    </LinearLayout>
</LinearLayout>