<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.xia.adgis.Main.Activity.ApplicationMessageActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f1f1">
    <android.support.v7.widget.Toolbar style="@style/AppTheme.Toolbar"
        android:id="@+id/app_message_toolbar"
        app:navigationIcon="?attr/homeAsUpIndicator"/>
    <ImageView
        android:id="@+id/about_logo"
        android:layout_marginTop="50dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:src="@drawable/tubiao"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:lines="1"
        android:padding="5dp"
        android:text="ADGIS  v1.0"
        android:textSize="16sp"
        android:layout_gravity="center"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/about_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_vertical"
        android:dividerPadding="16dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/about_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_bottombar"
            android:clickable="true"
            android:gravity="center|start"
            android:padding="16dp"
            android:text="用户指南"
            tools:ignore="HardcodedText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/about_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_bottombar"
            android:clickable="true"
            android:gravity="center_vertical|start"
            android:padding="16dp"
            android:text="给应用评分"
            tools:ignore="HardcodedText"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/about_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_bottombar"
            android:clickable="true"
            android:gravity="center_vertical|start"
            android:padding="16dp"
            android:text="分享"
            tools:ignore="HardcodedText"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:text="我的广告管理"
        tools:ignore="HardcodedText"
        android:textSize="14sp" />
</FrameLayout>