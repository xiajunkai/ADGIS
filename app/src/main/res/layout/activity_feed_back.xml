<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xia.adgis.Main.Activity.FeedBackActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/feedback_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/AppTheme.Toolbar"
        app:navigationIcon="?attr/homeAsUpIndicator"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">
    <TextView
        android:id="@+id/feedback_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:text="输入意见或建议"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:padding="10dp" />

    <EditText
        android:id="@+id/feedback_input"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/feedback_edittext"
        android:inputType="text" />

    <Button
        android:id="@+id/feedback_send"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="发送"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/feedback_tip_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        android:text="点击发送以短信的方式向我反馈\n这可能需要你支付少许短信费用！"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />


    <TextView
        android:id="@+id/feedback_tip_ow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="start|center_vertical"
        android:text="也可以通过以下方式联系我"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <View
        android:id="@+id/feedback_tip_ow_line"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/red"
        android:layout_marginBottom="8dp" />
        </LinearLayout>

</LinearLayout>
